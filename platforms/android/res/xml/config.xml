<?xml version='1.0' encoding='utf-8'?>
<widget id="uci.cedin.lcontrol" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="KeepScreenOn">
        <param name="android-package" value="com.mediamatrixdoo.keepscreenon.KeepScreenOn" />
    </feature>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <feature name="Keyboard">
        <param name="android-package" onload="true" value="org.apache.cordova.labs.keyboard.Keyboard" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="DatePickerPlugin">
        <param name="android-package" value="com.plugin.datepicker.DatePickerPlugin" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="CsZBar">
        <param name="android-package" value="org.cloudsky.cordovaPlugins.ZBar" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/android/mdpi/icon.png" />
    <icon density="hdpi" src="res/android/hdpi/icon.png" />
    <icon density="xhdpi" src="res/android/xhdpi/icon.png" />
    <icon density="xxhdpi" src="res/android/xxhdpi/icon.png" />
    <icon density="xxxhdpi" src="res/android/xxxhdpi/icon.png" />
    <name>Light Control</name>
    <description>
		Mobile Light Control
	</description>
    <author email="acedeno@uci.cu" href="">
		Petsoon Inc
	</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
</widget>
